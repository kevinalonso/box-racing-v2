{% extends "base.html.twig" %}

{% block body %}
	<div class="row mt-10 mb-10">
		{% if announcements != null %}
			<h5 class="w-100 text-center">{{titleCat.Category.Name}}</h5>
		{% else %}
			<h5 class="w-100 text-center">{{titleCat}}</h5>
		{% endif %}
		
	</div>

	<div class="row container">
		{% for announcement in announcements %}
			{% if announcement.IsActive %}
				<div class="col-lg-4 col-md-6 mb-4">
					<div class="card h-100">
						<!--http://placehold.it/700x400-->
						<a href="{{ path('announcement', {'id': announcement.id}) }}"><img class="card-img-top" src="../../templates/imagesmotos/{{ asset(announcement.Image1) |split('/')|last }}" alt=""></a>
						<div class="card-body">
							<h4 class="card-title">
							  <a class="card-announcement" href="{{ path('announcement', {'id': announcement.id}) }}">{{announcement.Title}} {{announcement.IsPermisA2 ? 'Permis A2' : ''}}</a>
							</h4>
							<h5>Prix: {{announcement.Price}}â‚¬</h5>
							<h5 class="card-text">KM: {{announcement.Km}}</h5>
						</div>
						<div class="card-footer">
							<small class="text-muted"></small>
						</div>
					</div>
				</div>

			{% endif %}
		{% endfor %}
	</div>

{% endblock %}